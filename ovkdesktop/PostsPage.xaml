<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ovkdesktop.PostsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ovkdesktop"
    xmlns:models="using:ovkdesktop.Models"
    xmlns:converters="using:ovkdesktop.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock x:Name="NewsPostsLabel" Text="Новости" Margin="125,105,0,0" Style="{ThemeResource TitleLargeTextBlockStyle}" FontSize="42" ></TextBlock>
            <TextBlock x:Name="ErrorNewsPostsText" Margin="250,190,0,0" Foreground="Red" Visibility="Collapsed" TextWrapping="Wrap"/>
            <Button x:Name="LoadMoreNewsPageButton"
                Content="Загрузить ещё..."
                Click="LoadMoreButton"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                Margin="0,10"/>

        </Grid>

        <Grid Grid.Row="1" Margin="100,20,20,20" x:Name="GridNewsPosts">
            <ProgressRing x:Name="LoadingProgressRingNewsPosts" IsActive="True" 
                Width="50" Height="50" 
                HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <ListView x:Name="NewsPostsListView" ItemsSource="{x:Bind NewsPosts}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:NewsPosts">
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
						BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
						BorderThickness="1" CornerRadius="8"
						Margin="0,5,0,10" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Background="Transparent" Tapped="LoadProfileFromPost" Tag="{x:Bind FromID}">
                                    <PersonPicture
                                        Width="50"
                                        Height="50"
                                        ProfilePicture="{Binding Profile.Photo200}"
                                        DisplayName="{Binding AuthorFullName, Mode=OneWay}" />
                                    <TextBlock Margin="10,-15,0,0" VerticalAlignment="Center" Style="{ThemeResource TitleTextBlockStyle}" FontSize="15">
                                        <Run Text="{x:Bind Profile.FirstName}"/>
                                        <Run Text=" "/>
                                        <Run Text="{x:Bind Profile.LastName}"/>     
                                    </TextBlock>
                                </StackPanel>


                                <TextBlock Grid.Row="0"
								   Text="{Binding FormattedDate}"
								   Opacity="0.7" Margin="59,27,0,10" Style="{ThemeResource BodyTextBlockStyle}" FontSize="14"/>

                                <TextBlock Grid.Row="1"
								   Text="{Binding Text}"
								   TextWrapping="Wrap" Margin="0,0,0,10"
								   Visibility="{Binding Text, Converter={StaticResource StringToVisibilityConverter}}"/>


                                <Image Grid.Row="2"
							   Source="{Binding MainImageUrl, TargetNullValue=''}"
							   Stretch="Uniform" MaxHeight="400"
							   HorizontalAlignment="Left" Margin="0,0,0,10"
							   Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="15">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <FontIcon Glyph="&#xE006;" FontSize="16"/>
                                        <TextBlock Text="{Binding LikesNews.Count, FallbackValue=0, TargetNullValue=0}" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <FontIcon Glyph="&#xE8BD;" FontSize="16"/>
                                        <TextBlock Text="{Binding CommentsNews.Count, FallbackValue=0, TargetNullValue=0}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
