<Page
    x:Class="ovkdesktop.PostsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="24">
                <TextBlock x:Name="NewsPostsLabel" 
                           Text="Новости" 
                           Margin="125,105,0,0" 
                           Style="{ThemeResource TitleLargeTextBlockStyle}" 
                           FontSize="42" 
                           HorizontalAlignment="Left"/>

                <TextBlock x:Name="ErrorNewsPostsText" 
                           Foreground="Red" 
                           Visibility="Collapsed" 
                           TextWrapping="Wrap" 
                           Margin="125,10,0,10"/>

                <StackPanel x:Name="PostsContainer" Margin="125,20,0,0"/>

                <ProgressRing x:Name="LoadingProgressRingNewsPosts" 
                              IsActive="False" 
                              Width="50" 
                              Height="50" 
                              Margin="0,20,0,0"/>

                <Button x:Name="LoadMoreNewsPageButton"
                        Content="Загрузить ещё..."
                        Click="LoadMoreButton"
                        Visibility="Collapsed"
                        HorizontalAlignment="Stretch"
                        Margin="125,10,0,20"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>